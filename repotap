#!/usr/bin/env bash

function createdir {
	source /usr/local/Cellar/repotap/*/lib/create.sh
}

function removedir {
	source /usr/local/Cellar/repotap/*/lib/remove.sh
}
###

for arg in "$@"; do
  if [[ "$arg" = -c ]] || [[ "$arg" = create ]]; then
    ARG_CREATE_DIR=true
  fi
  if [[ "$arg" = -r ]] || [[ "$arg" = remove ]]; then
    ARG_REMOVE_DIR=true
  fi
done

###

if [[ "$ARG_CREATE_DIR" = true ]]; then
  createdir
fi

if [[ "$ARG_REMOVE_DIR" = true ]]; then
  removedir
fi
